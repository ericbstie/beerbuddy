{
	"name": "bun-react-template",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/index.ts",
		"start": "NODE_ENV=production bun src/index.ts",
		"build": "bun run build.ts",
		"codegen": "graphql-codegen --config codegen.ts",
		"codegen:watch": "graphql-codegen --config codegen.ts --watch",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check --write .",
		"format": "bunx @biomejs/biome format --write ."
	},
	"dependencies": {
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-slot": "^1.2.3",
		"@tanstack/react-form": "^1.25.0",
		"@tanstack/react-query": "^5.62.0",
		"@tanstack/react-router": "^1.95.0",
		"@tanstack/react-virtual": "^3.13.12",
		"@tanstack/zod-form-adapter": "^0.42.1",
		"bun-plugin-tailwind": "^0.1.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.545.0",
		"react": "^19",
		"react-dom": "^19",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@graphql-codegen/cli": "^6.0.2",
		"@graphql-codegen/client-preset": "^5.1.3",
		"@graphql-codegen/typescript": "^5.0.4",
		"@graphql-codegen/typescript-operations": "^5.0.4",
		"@graphql-codegen/typescript-react-query": "^6.1.1",
		"@tanstack/router-devtools": "^1.136.5",
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.4.0"
	}
}
